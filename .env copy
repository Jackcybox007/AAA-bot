# Excluded channels/categories (comma-separated IDs)
EXCLUDED_CATEGORY_IDS=
EXCLUDED_CHANNEL_IDS=

# Bot naming configuration
PRIVATE_CATEGORY_NAME=Private Bot Chats
PUBLIC_BOT_CHANNEL_NAME=bot-commands

# Polling intervals (in seconds)
MARKET_POLL_SECS=300
